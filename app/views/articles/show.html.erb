<h2 class="center"> <%= @article.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
  
  <h4 class="description center"><strong>Description</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  
  <div class="article-actions center">
    <%= link_to 'View All Articles', articles_path, class: "btn btn-sm btn-custom" %>
    <%= link_to 'Edit Article', edit_article_path(@article), class: "btn btn-sm btn-warning" %>
    <%= link_to 'Delete Article', article_path(@article), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>

</div>