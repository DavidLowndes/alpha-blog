<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :username %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
        </div>
      </div>  
      
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :email %>
        </div>
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :password %>
        </div>
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: 'btn btn-lg btn-custom')%>
        </div>
      </div>
      
    <% end %>
    
    <div class="col-xs-4 col-xs-offset-4 center">
      [ <%= link_to 'Return to Home Page', '/' %> ]
    </div>
  </div>
</div>