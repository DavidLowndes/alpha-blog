<h1 align="center">New Category</h1>

<%= render 'shared/errors', obj: @category %>
  
<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>

  <div class="form-group">
    <div class="control-label col-sm-3">
      <%= f.label :name %>
    </div>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
    </div>
  </div>  
  
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit class: 'btn btn-lg btn-custom' %>
    </div>
  </div>
  
<% end %>

<div class="col-xs-4 col-xs-offset-4 center">
  [ <%= link_to 'Return to Home Page', '/' %> ]
</div>
