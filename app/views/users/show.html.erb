<h2 class="center">- <%= @user.username %>'s Profile -</h2>
<% if logged_in? && (@user == current_user || current_user.admin?) %>
  <h5 align="center"><%= @user.email %></h5>
<% end %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 100 %>
  </div>
</div>

<% if @user.articles.any? %>
  <h4 class="center">- <%= @user.username %>'s articles -</h4>
  <div class="center">
    <%= will_paginate @user_articles %>
  </div>
  <%= render 'articles/article', obj: @user_articles %>
  <div class="center">
    <%= will_paginate @user_articles %>
  </div>
<% else %>
  <div class="center">
    <small>(<%= @user.username %> has no articles)</small>
  </div>
<% end %>