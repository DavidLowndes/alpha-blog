<div class="well col-xs-8 col-xs-offset-2">
  
  <ul class="listing">
    <div class="row center">
      <h2 class="no-top-margin"><%= @article.title %></h2>
      <div class="col-md-4 col-md-offset-4">
        
        <li class="article-title">
          Written by <%= link_to @article.user.username, user_path(@article.user) %>
        </li>
        
        <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
      
      </div>
    </div>
  </ul>
  <hr>
  <%= simple_format(@article.description) %>
  
  <% if @article.user == current_user %>
    <div class="article-actions center">
      <%= link_to 'View All Articles', articles_path, class: "btn btn-sm btn-custom" %>
      <%= link_to 'Edit Article', edit_article_path(@article), class: "btn btn-sm btn-warning" %>
      <%= link_to 'Delete Article', article_path(@article), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>

</div>